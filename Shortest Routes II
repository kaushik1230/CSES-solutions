#include <bits/stdc++.h>

using namespace std;
#define int long long
int mod = 1000000007;
const long long INF = 1e15;




signed main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
    int n , m , q; // no of cities and no of roads
    cin>>n>>m>>q;
	vector<vector<int>> adj(n+1,vector<int>(n+1,INF));
	
	for(int i =0;i<m;i++){
		int a , b , c;
		cin>>a>>b>>c;
		adj[a][b] = min(adj[a][b],c);
		adj[b][a] = min(adj[b][a],c);
	}
	for(int i = 1;i<=n;i++)adj[i][i] = 0;
	for(int k = 1 ; k<= n;k++)
	{
		for(int i = 1;i<=n;i++)
		{
			for(int j = 1;j<=n;j++)
			{
				
					if(adj[i][k] != INF && adj[k][j] != INF) {
    						adj[i][j] = min(adj[i][j], adj[i][k] + adj[k][j]);
					}
			}
		}
	}

	for(int j = 0;j<q;j++)
	{
		int a , b;
		cin>>a>>b;
		if(adj[a][b]!=INF)
		{
			cout<<adj[a][b]<<endl;
		}
		else{
			cout<<-1<<endl;
		}
	}
	
    return 0;
}

